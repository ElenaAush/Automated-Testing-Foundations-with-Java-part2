<?xml version="1.0" encoding="UTF-8"?>
<Configuration>
    <Appenders>
        <Console name="Console">
            <PatternLayout pattern="%d %p %c{2} [%t] %l %m%n"/>
        </Console>
        <File name="file" fileName="target/log/calculator-to-email.log">
            <PatternLayout pattern="%d %p %c{2} [%t] %l %m%n"/>
        </File>
    </Appenders>
    <Loggers>
        <Root level="trace">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="file"/>
        </Root>
    </Loggers>
</Configuration>